{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "es6",
        "target": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "noImplicitOverride": true,
        "noPropertyAccessFromIndexSignature": true,
        "noUncheckedIndexedAccess": true,
        "baseUrl": "./",
        "paths": {
            "~/*": [
                "./src/*"
            ]
        }
    }
}