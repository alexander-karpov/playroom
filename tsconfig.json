{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "es6",
        "target": "ES2020",
        "moduleResolution": "node",
        "strict": true,
        "noImplicitOverride": true,
        "noPropertyAccessFromIndexSignature": true,
        "noUncheckedIndexedAccess": true,
        "baseUrl": "./",
        "paths": {
            "@ecs": [
                "./src/ecs/index.ts"
            ],
            "@systems": [
                "./src/systems/index.ts"
            ],
            "@components": [
                "./src/components/index.ts"
            ],
            "@utils/*": [
                "./src/utils/*"
            ]
        }
    }
}